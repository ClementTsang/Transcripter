<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TranscripterUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        WindowStartupLocation="CenterScreen"
        Width="800" Height="450"
        MinWidth="800" MinHeight="450"
        MaxWidth="800" MaxHeight="450"
        x:Class="TranscripterUI.Views.MainWindow"
        Icon="/Assets/Icons/icon.ico"
        Title="Transcripter"
        ExtendClientAreaToDecorationsHint="True">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Panel Background="#2c2f33">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Spacing="30">
            <Ellipse Fill="#fff" Width="48" Height="48"></Ellipse>
            <Rectangle Fill="#fff" Width="120" Height="2" Opacity="0.75"></Rectangle>
            <Ellipse Fill="#fff" Width="48" Height="48"></Ellipse>
            <Rectangle Fill="#fff" Width="120" Height="2" Opacity="0.75"></Rectangle>
            <Ellipse Fill="#fff" Width="48" Height="48"></Ellipse>
        </StackPanel>
    </Panel>

</Window>
